{
	"app-id": "com.adilhanney.ricochlime",
	"runtime": "org.freedesktop.Platform",
	"runtime-version": "22.08",
	"sdk": "org.freedesktop.Sdk",
	"command": "ricochlime",
	"separate-locales": false,
	"finish-args": [
		"--share=ipc",
		"--socket=fallback-x11",
		"--socket=wayland",
		"--device=dri",
		"--socket=pulseaudio"
	],
	"modules": [
		{
			"name": "ricochlime",
			"buildsystem": "simple",
			"build-commands": [
				"mkdir -p /app",
				"tar -xf Ricochlime_*.tar.gz -C /app",
				"mkdir -p /app/bin",
				"ln -s /app/ricochlime /app/bin/ricochlime"
			],
			"sources": [
				{
					"type": "file",
					"url": "https://github.com/adil192/ricochlime/releases/download/v1.11.2/Ricochlime_v1.11.2_Linux_x86_64.tar.gz",
					"sha256": "9b234aa45ba075a0f09d62319b5ca59824b92e645552d342f2d20efd931b9bd7",
					"only-arches": [
						"x86_64"
					],
					"x-checker-data": {
						"type": "json",
						"url": "https://api.github.com/repos/adil192/ricochlime/releases/latest",
						"version-query": ".tag_name",
						"url-query": ".assets[] | select(.name==\"Ricochlime_\" + $version + \"_Linux_x86_64.tar.gz\") | .browser_download_url",
						"is-main-source": false
					}
				},
				{
					"type": "file",
					"url": "https://github.com/adil192/ricochlime/releases/download/v1.11.2/Ricochlime_v1.11.2_Linux_arm64.tar.gz",
					"sha256": "28b996e7f8cf714ac970563ae5125c7a17fea2bd2554c1ead3e44a6c2a3492b0",
					"only-arches": [
						"aarch64"
					],
					"x-checker-data": {
						"type": "json",
						"url": "https://api.github.com/repos/adil192/ricochlime/releases/latest",
						"version-query": ".tag_name",
						"url-query": ".assets[] | select(.name==\"Ricochlime_\" + $version + \"_Linux_arm64.tar.gz\") | .browser_download_url",
						"is-main-source": true
					}
				}
			]
		}
	]
}
