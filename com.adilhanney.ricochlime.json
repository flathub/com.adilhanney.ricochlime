{
	"app-id": "com.adilhanney.ricochlime",
	"runtime": "org.freedesktop.Platform",
	"runtime-version": "24.08",
	"sdk": "org.freedesktop.Sdk",
	"command": "ricochlime",
	"separate-locales": false,
	"finish-args": [
		"--share=ipc",
		"--socket=fallback-x11",
		"--socket=wayland",
		"--device=dri",
		"--socket=pulseaudio"
	],
	"modules": [
		{
			"name": "ricochlime",
			"buildsystem": "simple",
			"build-commands": [
				"mkdir -p /app",
				"tar -xf Ricochlime_*.tar.gz -C /app",
				"mkdir -p /app/bin",
				"ln -s /app/ricochlime /app/bin/ricochlime"
			],
			"sources": [
				{
					"type": "file",
					"url": "https://github.com/adil192/ricochlime/releases/download/v1.11.4/Ricochlime_v1.11.4_Linux_x86_64.tar.gz",
					"sha256": "67657b1cf7fdea59e8db803768b565be7f51afbf5292a7ea60de62cd056460e6",
					"only-arches": [
						"x86_64"
					],
					"x-checker-data": {
						"type": "json",
						"url": "https://api.github.com/repos/adil192/ricochlime/releases/latest",
						"version-query": ".tag_name",
						"url-query": ".assets[] | select(.name==\"Ricochlime_\" + $version + \"_Linux_x86_64.tar.gz\") | .browser_download_url",
						"is-main-source": false
					}
				},
				{
					"type": "file",
					"url": "https://github.com/adil192/ricochlime/releases/download/v1.11.4/Ricochlime_v1.11.4_Linux_arm64.tar.gz",
					"sha256": "b58dd004f20460078f95230863abf2ec2785490f91de29fc664be7e7ff9f3bb6",
					"only-arches": [
						"aarch64"
					],
					"x-checker-data": {
						"type": "json",
						"url": "https://api.github.com/repos/adil192/ricochlime/releases/latest",
						"version-query": ".tag_name",
						"url-query": ".assets[] | select(.name==\"Ricochlime_\" + $version + \"_Linux_arm64.tar.gz\") | .browser_download_url",
						"is-main-source": true
					}
				}
			]
		}
	]
}
