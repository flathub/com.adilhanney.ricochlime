{
	"app-id": "com.adilhanney.ricochlime",
	"runtime": "org.freedesktop.Platform",
	"runtime-version": "22.08",
	"sdk": "org.freedesktop.Sdk",
	"command": "ricochlime",
	"separate-locales": false,
	"finish-args": [
		"--share=ipc",
		"--socket=fallback-x11",
		"--socket=wayland",
		"--device=dri",
		"--socket=pulseaudio"
	],
	"modules": [
		{
			"name": "ricochlime",
			"buildsystem": "simple",
			"build-commands": [
				"mkdir -p /app",
				"tar -xf Ricochlime_*.tar.gz -C /app",
				"mkdir -p /app/bin",
				"ln -s /app/ricochlime /app/bin/ricochlime"
			],
			"sources": [
				{
					"type": "file",
					"url": "https://github.com/adil192/ricochlime/releases/download/v1.10.1/Ricochlime_v1.10.1_Linux_x86_64.tar.gz",
					"sha256": "3e65dec5237d691a91c1a4d36c6da177355b254565d67fa0dd7cf29471bd4200",
					"only-arches": [
						"x86_64"
					],
					"x-checker-data": {
						"type": "json",
						"url": "https://api.github.com/repos/adil192/ricochlime/releases/latest",
						"version-query": ".tag_name",
						"url-query": ".assets[] | select(.name==\"Ricochlime_\" + $version + \"_Linux_x86_64.tar.gz\") | .browser_download_url",
						"is-main-source": false
					}
				},
				{
					"type": "file",
					"url": "https://github.com/adil192/ricochlime/releases/download/v1.10.1/Ricochlime_v1.10.1_Linux_arm64.tar.gz",
					"sha256": "97ba9112e4cdcec0c6bd37afd8a558bfa3cff303bbda06c7ab199768ce01fa03",
					"only-arches": [
						"aarch64"
					],
					"x-checker-data": {
						"type": "json",
						"url": "https://api.github.com/repos/adil192/ricochlime/releases/latest",
						"version-query": ".tag_name",
						"url-query": ".assets[] | select(.name==\"Ricochlime_\" + $version + \"_Linux_arm64.tar.gz\") | .browser_download_url",
						"is-main-source": true
					}
				}
			]
		}
	]
}
