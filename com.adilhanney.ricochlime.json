{
	"app-id": "com.adilhanney.ricochlime",
	"runtime": "org.freedesktop.Platform",
	"runtime-version": "22.08",
	"sdk": "org.freedesktop.Sdk",
	"command": "ricochlime",
	"separate-locales": false,
	"finish-args": [
		"--share=network",
		"--share=ipc",
		"--socket=fallback-x11",
		"--socket=wayland",
		"--device=dri",
		"--socket=pulseaudio"
	],
	"modules": [
		{
			"name": "ricochlime",
			"buildsystem": "simple",
			"only-arches": [
				"x86_64"
			],
			"build-commands": [
				"mkdir -p Ricochlime",
				"tar -xf Ricochlime_*.tar.gz -C Ricochlime",
				"cp -r Ricochlime /app/",
				"chmod +x /app/Ricochlime/ricochlime",
				"mkdir -p /app/bin",
				"mkdir -p /app/lib",
				"ln -s /app/Ricochlime/ricochlime /app/bin/ricochlime",
				"ln -s /app/Ricochlime/lib/* /app/lib/",
				"install -Dm644 com.adilhanney.ricochlime.metainfo.xml -t /app/share/metainfo/",
				"install -Dm644 icon-512x512.png /app/share/icons/hicolor/512x512/apps/com.adilhanney.ricochlime.png",
				"install -Dm644 com.adilhanney.ricochlime.desktop -t /app/share/applications/"
			],
			"sources": [
				{
					"type": "file",
					"url": "https://raw.githubusercontent.com/adil192/ricochlime/v0.4.2/flatpak/com.adilhanney.ricochlime.metainfo.xml",
					"sha256": "e95ac99d366f1d9ad17bfeb20eb845ad471de126b9d9e66a57282b67ad0058b6",
					"x-checker-data": {
						"type": "json",
						"url": "https://api.github.com/repos/adil192/ricochlime/releases/latest",
						"version-query": ".tag_name",
						"url-query": "$version | \"https://raw.githubusercontent.com/adil192/ricochlime/\" + $version + \"/flatpak/com.adilhanney.ricochlime.metainfo.xml\""
					}
				},
				{
					"type": "file",
					"url": "https://raw.githubusercontent.com/adil192/ricochlime/v0.4.2/flatpak/com.adilhanney.ricochlime.desktop",
					"sha256": "98e6200987dc144012b1f55e4a4cc79d203222f64b2813029b197d7f964fb6bf",
					"x-checker-data": {
						"type": "json",
