{
	"app-id": "com.adilhanney.ricochlime",
	"runtime": "org.freedesktop.Platform",
	"runtime-version": "22.08",
	"sdk": "org.freedesktop.Sdk",
	"command": "ricochlime",
	"separate-locales": false,
	"finish-args": [
		"--share=ipc",
		"--socket=fallback-x11",
		"--socket=wayland",
		"--device=dri",
		"--socket=pulseaudio"
	],
	"modules": [
		{
			"name": "ricochlime",
			"buildsystem": "simple",
			"build-commands": [
				"mkdir -p /app",
				"tar -xf Ricochlime_*.tar.gz -C /app",
				"mkdir -p /app/bin",
				"ln -s /app/ricochlime /app/bin/ricochlime"
			],
			"sources": [
				{
					"type": "file",
					"url": "https://github.com/adil192/ricochlime/releases/download/v1.7.1/Ricochlime_v1.7.1_Linux_x86_64.tar.gz",
					"sha256": "f8eded9a004818bf8a0a1531f969c7881ded14f8f34476325f1b8aa49315ffcb",
					"only-arches": [
						"x86_64"
					],
					"x-checker-data": {
						"type": "json",
						"url": "https://api.github.com/repos/adil192/ricochlime/releases/latest",
						"version-query": ".tag_name",
						"url-query": ".assets[] | select(.name==\"Ricochlime_\" + $version + \"_Linux_x86_64.tar.gz\") | .browser_download_url",
						"is-main-source": false
					}
				},
				{
					"type": "file",
					"url": "https://github.com/adil192/ricochlime/releases/download/v1.7.1/Ricochlime_v1.7.1_Linux_arm64.tar.gz",
					"sha256": "e19fd1f060efb1f5fd478882542e33df05376d43207e2ad70ab2317a666fce43",
					"only-arches": [
						"aarch64"
					],
					"x-checker-data": {
						"type": "json",
						"url": "https://api.github.com/repos/adil192/ricochlime/releases/latest",
						"version-query": ".tag_name",
						"url-query": ".assets[] | select(.name==\"Ricochlime_\" + $version + \"_Linux_arm64.tar.gz\") | .browser_download_url",
						"is-main-source": true
					}
				}
			]
		}
	]
}
