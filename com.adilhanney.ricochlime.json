{
	"app-id": "com.adilhanney.ricochlime",
	"runtime": "org.freedesktop.Platform",
	"runtime-version": "22.08",
	"sdk": "org.freedesktop.Sdk",
	"command": "ricochlime",
	"separate-locales": false,
	"finish-args": [
		"--share=ipc",
		"--socket=fallback-x11",
		"--socket=wayland",
		"--device=dri",
		"--socket=pulseaudio"
	],
	"modules": [
		{
			"name": "ricochlime",
			"buildsystem": "simple",
			"build-commands": [
				"mkdir -p /app",
				"tar -xf Ricochlime_*.tar.gz -C /app",
				"mkdir -p /app/bin",
				"ln -s /app/ricochlime /app/bin/ricochlime"
			],
			"sources": [
				{
					"type": "file",
					"url": "https://github.com/adil192/ricochlime/releases/download/v1.8.1/Ricochlime_v1.8.1_Linux_x86_64.tar.gz",
					"sha256": "95d4ccb57f3bca4e4a460bda90a059901e1d2f3f06b9a1e2e428cc1879e4fd9e",
					"only-arches": [
						"x86_64"
					],
					"x-checker-data": {
						"type": "json",
						"url": "https://api.github.com/repos/adil192/ricochlime/releases/latest",
						"version-query": ".tag_name",
						"url-query": ".assets[] | select(.name==\"Ricochlime_\" + $version + \"_Linux_x86_64.tar.gz\") | .browser_download_url",
						"is-main-source": false
					}
				},
				{
					"type": "file",
					"url": "https://github.com/adil192/ricochlime/releases/download/v1.8.1/Ricochlime_v1.8.1_Linux_arm64.tar.gz",
					"sha256": "900d6b7653be396a240bf7512fac35bfeac436c1a7ef8c233bce9d9653b8f286",
					"only-arches": [
						"aarch64"
					],
					"x-checker-data": {
						"type": "json",
						"url": "https://api.github.com/repos/adil192/ricochlime/releases/latest",
						"version-query": ".tag_name",
						"url-query": ".assets[] | select(.name==\"Ricochlime_\" + $version + \"_Linux_arm64.tar.gz\") | .browser_download_url",
						"is-main-source": true
					}
				}
			]
		}
	]
}
